<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="350dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:background="#3F51B5"
        android:cropToPadding="true"
        android:padding="3dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/tvMerk"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="Merek"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/tvHarga"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Harga"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:textSize="23sp"
        app:layout_constraintTop_toBottomOf="@id/tvMerk"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/tvReady"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:text="Ready"
        android:textColor="#50C878"
        android:textSize="20sp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold|italic"
        app:layout_constraintTop_toBottomOf="@id/tvHarga"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />
    <ImageView
        android:id="@+id/imgCart"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/baseline_format_list_bulleted_24"
        app:layout_constraintTop_toBottomOf="@id/tvHarga"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
        android:id="@+id/imgList"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/baseline_shopping_cart_24"
        app:layout_constraintTop_toBottomOf="@id/tvHarga"
        app:layout_constraintEnd_toStartOf="@id/imgCart"/>

</androidx.constraintlayout.widget.ConstraintLayout>