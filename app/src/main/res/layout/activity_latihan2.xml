<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Latihan2">
    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="268dp"
        android:layout_height="192dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pilih"
        tools:ignore="MissingConstraints">

        <RadioButton
            android:id="@+id/TIS1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Teknik Informatika S1" />

        <RadioButton
            android:id="@+id/SIS1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sistem Informasi S1" />

        <RadioButton
            android:id="@+id/ILKOMS1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ilmu Komunikasi S1" />

        <RadioButton
            android:id="@+id/TID3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Teknik Informatika D3" />
    </RadioGroup>

    <TextView
        android:id="@+id/pilih"
        android:layout_width="274dp"
        android:layout_height="38dp"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="8dp"
        android:text="Pilih Program Studi"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/radioGroup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.921" />

    <TextView
        android:id="@+id/pilih2"
        android:layout_width="272dp"
        android:layout_height="32dp"
        android:layout_marginTop="32dp"
        android:text="Program Studi Pilihan Anda :"
        android:textAlignment="center"
        android:textSize="16sp"
        app:flow_horizontalAlign="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

    <TextView
        android:id="@+id/Result"
        android:layout_width="274dp"
        android:layout_height="41dp"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pilih2"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>